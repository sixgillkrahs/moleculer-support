{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
